set nocompatible
set number
set relativenumber
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set clipboard=unnamed,unnamedplus
syntax on
filetype plugin indent on

" Search
set ignorecase
set smartcase
set incsearch
set hlsearch

" UI
set termguicolors
set cursorline
set scrolloff=3

